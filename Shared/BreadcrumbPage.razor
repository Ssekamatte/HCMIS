@*<h3>BreadcrumbPage</h3>*@

<ol class="breadcrumb" style="margin-top:5px;">
    <li class="breadcrumb-item active" style="width: 100%; background-color: bisque; color: brown; font-family: Cambria; padding: 10px; font: bolder;">
        @*<strong> Aptitude Tests </strong>*@
        <SfBreadcrumb>
            <BreadcrumbItems>
                <BreadcrumbItem IconCss="fa fa-home" Url="" Disabled=true></BreadcrumbItem>
                @if (!string.IsNullOrEmpty(CategoryName)){
                    <BreadcrumbItem Text="@CategoryName" Url="" Disabled=true></BreadcrumbItem>
                }
                <BreadcrumbItem Text="@PageName" Url="" Disabled=true></BreadcrumbItem>
            </BreadcrumbItems>
        </SfBreadcrumb>
        </li>
</ol>

@code {
    [Parameter]
    public string? CategoryName { get; set; }
    [Parameter]
    public string? PageName { get; set; }
}
<style>
    .e-breadcrumb.e-disabled .e-breadcrumb-item .e-breadcrumb-text, .e-breadcrumb .e-disabled.e-breadcrumb-item .e-breadcrumb-text, .e-breadcrumb.e-disabled .e-breadcrumb-separator {
        color: brown;
        font-family: Cambria;
        font: bolder;
        font-size:16px;
    }
</style>