@page "/ClearSitePage"
@inject IJSRuntime JSRuntime

<h1>Clear Site Data Example</h1>

<button @onclick="ClearSiteData">Clear Site Data</button>

@code {

    async Task ClearSiteData()
    {
        await JSRuntime.InvokeVoidAsync("navigator.clearSiteData", "\"cache\", \"cookies\"");
        Console.WriteLine("Site data cleared.");
    }

