        if (today.Day < dob.Day)
        {
            months--;
        }

        if (months < 0)
        {
            years--;
            months += 12;
        }

        int days = (today - dob.AddMonths((years * 12) + months)).Days;

        //toastService.ShowSuccess("Years , Months, Days" +years + months  + days);

        if(years >= 18)
        {
            isdobvalid = true;
            //toastService.ShowSuccess(">18");
        }
        else
        {
            isdobvalid = false;
            //toastService.ShowSuccess("<18");
        }

    }


