        </GridColumn>
        <GridColumn Field=@nameof(EmployeeQualification.InstitutionName)
                    HeaderText="Institution"
                    TextAlign="TextAlign.Justify"
                    AllowEditing="true"
                    ValidationRules="@(new ValidationRules { Required = false })"
                    Width="100"
                    CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">

            <EditTemplate Context="InstitutionNameContext">
                <SfTextBox Multiline=true rowspan="8" @bind-Value=@((InstitutionNameContext as EmployeeQualification).InstitutionName) Placeholder="Please Type" FloatLabelType="FloatLabelType.Never"></SfTextBox>
            </EditTemplate>
        </GridColumn>
        <GridForeignColumn Field=@nameof(EmployeeQualification.LevelofEducationId)
