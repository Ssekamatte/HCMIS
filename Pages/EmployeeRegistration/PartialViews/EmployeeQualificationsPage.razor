                           CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">

            <EditTemplate Context="EducationContext">
                <SfDropDownList @bind-Value=@((EducationContext as EmployeeQualification).LevelofEducationId) Enabled="true" TItem="ALevelofEducation" TValue="int?" DataSource="@LevelofEducationData" 
