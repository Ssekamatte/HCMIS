                </SfDropDownList>
            </EditTemplate>
        </GridForeignColumn>
        <GridForeignColumn Field=@nameof(EmployeeQualification.DegreeClassId)
                           HeaderText="Degree Class"
                           Width="80"
                           AllowEditing="true"
                           ForeignKeyField="@(nameof(ADegreeClass.DegreeClassId))"
                           ForeignKeyValue="@(nameof(ADegreeClass.DegreeClassDesc))"
                           ForeignDataSource="@DegreeClassData"
                           AllowFiltering="false"
                           IsFrozen="false"
                           CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">

            <EditTemplate Context="DegreeClassContext">
                <SfDropDownList @bind-Value=@((DegreeClassContext as EmployeeQualification).LevelofEducationId) Enabled="true" TItem="ADegreeClass" TValue="int?" DataSource="@DegreeClassData"
                                Placeholder="Please Select" FloatLabelType="FloatLabelType.Never" AllowFiltering="true" ShowClearButton="true" PopupWidth="350px">
                    <DropDownListFieldSettings Value="@nameof(ADegreeClass.DegreeClassId)" Text="@nameof(ADegreeClass.DegreeClassDesc)"></DropDownListFieldSettings>
                </SfDropDownList>
            </EditTemplate>
        </GridForeignColumn>
        <GridColumn Field=@nameof(EmployeeQualification.QualificationAttained)
                    HeaderText="Award/Qualification Attained"
                    Width="100"
                    CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">

            <EditTemplate Context="QualificationAttainedContext">
                <SfTextBox Multiline=true rowspan="8" @bind-Value=@((QualificationAttainedContext as EmployeeQualification).QualificationAttained) Placeholder="Please Type" FloatLabelType="FloatLabelType.Never"></SfTextBox>                
            </EditTemplate>

        </GridColumn>
        <GridColumn Field=@nameof(EmployeeQualification.StartDate)
                    HeaderText="From"
                    EditType="EditType.DatePickerEdit"
                    Format="dd-MMM-yy"
                    Type="ColumnType.Date"
                    Width="50"
                    AllowEditing="true"
                    CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">
            <EditTemplate Context="FromContext">
                <SfDatePicker @bind-Value=@((FromContext as EmployeeQualification).StartDate) Format="dd-MMM-yy" FloatLabelType="FloatLabelType.Never" AllowEdit="false"></SfDatePicker>
            </EditTemplate>
        </GridColumn>
        <GridColumn Field=@nameof(EmployeeQualification.IsCurrent)
                    HeaderText="Current"
                    DisplayAsCheckBox="true"
                    Width="60"
                    CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">
            @* <EditTemplate Context="IsCurrentContext">
                <SfCheckBox Label="Is Alive?" TChecked="isChecked" @bind-Value=@((IsCurrentContext as EmployeeQualification).IsCurrent)></SfCheckBox>
            </EditTemplate> *@
        </GridColumn>
        <GridColumn Field=@nameof(EmployeeQualification.EndDate)
                    HeaderText="To"
                    EditType="EditType.DatePickerEdit"
                    Format="dd-MMM-yy"
                    Type="ColumnType.Date"
                    Width="50"
                    AllowEditing="true"
                    CustomAttributes="@(new Dictionary<string, object>(){ { "class", "e-attr2" }})">
            <EditTemplate Context="ToContext">
                <SfDatePicker @bind-Value=@((ToContext as EmployeeQualification).EndDate) Format="dd-MMM-yy" FloatLabelType="FloatLabelType.Never" AllowEdit="false"></SfDatePicker>
            </EditTemplate>
        </GridColumn>
    </GridColumns>
</SfGrid>

